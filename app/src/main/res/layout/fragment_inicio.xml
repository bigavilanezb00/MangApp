                app:layout_constraintTop_toBottomOf="@+id/manga101" />

            <ImageButton
                android:id="@+id/manga104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/manga104"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manga103"
                app:layout_constraintTop_toBottomOf="@+id/manga102" />

            <TextView
                android:id="@+id/seis_dias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="ÚLTIMOS 6 DÍAS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manga103" />

            <ImageButton
                android:id="@+id/manga105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/manga105"
                app:layout_constraintEnd_toStartOf="@+id/manga106"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seis_dias" />

            <ImageButton
                android:id="@+id/manga106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/manga106"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manga105"
                app:layout_constraintTop_toBottomOf="@+id/seis_dias" />

            <ImageButton
                android:id="@+id/manga107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/manga107"
                app:layout_constraintEnd_toStartOf="@+id/manga108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manga106" />

            <ImageButton
                android:id="@+id/manga108"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/manga108"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/manga107"
                app:layout_constraintTop_toBottomOf="@+id/manga105" />

            <TextView
                android:id="@+id/siete_dias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="ÚLTIMOS 7 DÍAS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manga107" />

            <ImageButton
                android:id="@+id/manga109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/manga109"
                app:layout_constraintEnd_toStartOf="@+id/manga110"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siete_dias" />

            <ImageButton
                android:id="@+id/manga110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/manga110"
                app:layout_constraintEnd_toEndOf="parent"
