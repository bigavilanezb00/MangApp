            <ImageButton
                android:id="@+id/manga101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/manga101"
                app:layout_constraintEnd_toStartOf="@+id/manga102"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cinco_dias" />

            <ImageButton
                android:id="@+id/manga102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/manga102"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/slime_icono"
                app:layout_constraintTop_toBottomOf="@+id/cinco_dias" />

            <ImageButton
                android:id="@+id/manga103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/manga103"
                app:layout_constraintEnd_toStartOf="@+id/manga104"
