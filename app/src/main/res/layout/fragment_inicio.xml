                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/slime_icono"
                app:layout_constraintTop_toBottomOf="@+id/cuatro_dias" />

            <ImageButton
                android:id="@+id/berserk_icono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/berserk_icono"
                app:layout_constraintEnd_toStartOf="@+id/tg_re_icono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slime_icono" />

            <ImageButton
                android:id="@+id/tg_re_icono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/tg_re_icono"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/berserk_icono"
                app:layout_constraintTop_toBottomOf="@+id/onk_icono" />

            <TextView
                android:id="@+id/cinco_dias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="ÚLTIMOS 5 DÍAS"
                app:layout_constraintStart_toStartOf="parent"
